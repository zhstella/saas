<div class="preview-panel">
  <h3 class="preview-title">Draft Preview</h3>
  <p class="preview-meta">
    Topic: <strong><%= post.topic&.name || 'Unassigned' %></strong>
    <% if post.tags.any? %>
      Â· Tags:
      <% post.tags.each do |tag| %>
        <span class="tag-chip readonly"><%= tag.name %></span>
      <% end %>
    <% end %>
  </p>
  <div class="preview-body">
    <%= simple_format(post.body.presence || 'Nothing to preview yet.') %>
  </div>
</div>
